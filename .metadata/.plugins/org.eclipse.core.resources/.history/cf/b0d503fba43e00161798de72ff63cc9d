object worksheet_forTest {

  val l = List("Monday", "Tuesday", "Wednesday")  //> l  : List[String] = List(Monday, Tuesday, Wednesday)

  for (
    s <- l   //generator
  ) println(s)                                    //> Monday
                                                  //| Tuesday
                                                  //| Wednesday

  for {
    s <- l
    if (s.length > 6) //filter
  } println(s)                                    //> Tuesday
                                                  //| Wednesday
  
  val result_for = for {
    s <- l
    s1 = s.toUpperCase()
    if (s1 != "")
  } yield (s1)                                    //> result_for  : List[String] = List(MONDAY, TUESDAY, WEDNESDAY)

}